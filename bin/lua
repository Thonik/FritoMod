#!/bin/bash
PATH=/bin:/usr/bin:$HOME/bin:$FM_ROOT

source fm-library.sh
make_root

name=$1
if [ ! $1 ]; then
	cd $root
	lua -l "FritoMod/global"
elif [ -f $1 ]; then
	name=$1
elif [ -f $1.lua ]; then
	name=$1
else
	error "file not found or is not a file: $1"
fi;

case $name in
	*.lua) name=`echo $name | trim -4` ;;
esac
make_path_from_root $name
echo $path_from_root

cd $root
lua -l "FritoMod/global" -l $path_from_root
